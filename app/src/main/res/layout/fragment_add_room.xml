<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <EditText
            android:id="@+id/editTextCreatorEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email of Creator"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/yellow"
            android:textColor="@color/yellow"/>

        <EditText
            android:id="@+id/editTextNameRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Name Room"
            android:inputType="textPersonName"
            android:textColorHint="@color/white"
            android:textColor="@color/white"/>


        <EditText
            android:id="@+id/editTextPasswordRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Password for Room"
            android:inputType="textPassword"
            android:textColorHint="@color/white"
            android:textColor="@color/white"/>


        <Button
            android:id="@+id/btnAddRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/yellow"
            android:text="@string/add_room" />


        <ProgressBar
            android:id="@+id/progressBarAddRoom"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
