<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.stosh.discountstorage.Auth.ResetPassword">

    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="495dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/image_singUp_w_h"
            android:layout_height="@dimen/image_singUp_w_h"
            android:layout_gravity="center"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <TextView
            android:id="@+id/textView_ResetPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/button_forgot_pass"
            android:textColor="@color/white"
            android:textSize="@dimen/textView_resetPass_size" />

        <TextView
            android:id="@+id/textView_ResetPass1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textView_resetPass_size"
            android:gravity="center"
            android:text="@string/textView_RorgotPass"
            android:textColor="@color/white"
            android:textSize="@dimen/textView_resetPass_size" />


        <EditText
            android:id="@+id/email_Reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:maxLines="1" />

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/button_login_marginTop"
            android:background="@color/yellow"
            android:gravity="center"
            android:text="@string/button_register" />

        <Button
            android:id="@+id/btn_reset_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button" />

        <ProgressBar
            android:id="@+id/progressBar_reset"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
